@using BierFroh.Model
<MudCard Width="200px" Outlined="true">
    <MudCardContent>
        <ErrorBoundary>
            <ChildContent>
                <MudGrid>
                    <MudItem xs=12>
                        <MudText Style="word-wrap: break-word;" Typo="Typo.body2">@Node.Title</MudText>
                    </MudItem>
                    <MudItem xs=12>
                        <MudChip Color="Color.Primary" Size="Size.Small">@Node.Version</MudChip>
                    </MudItem>
                </MudGrid>
            </ChildContent>
            <ErrorContent>
                <MudText Color="Color.Error">Error in graph Node</MudText>
            </ErrorContent>
        </ErrorBoundary>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    [EditorRequired]
    public Dependency Node { get; set; }
}
